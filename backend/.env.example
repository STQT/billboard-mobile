# ====================================
# Billboard Mobile - Environment Config
# ====================================

# PostgreSQL Database Configuration
POSTGRES_USER=billboard_user
POSTGRES_PASSWORD=billboard_pass
POSTGRES_DB=billboard_db
POSTGRES_PORT=5432

# Database URL для приложения (используется внутри контейнера backend)
# Формат: postgresql://user:password@host:port/database
# Внимание: используйте имя сервиса 'postgres' для Docker, 'localhost' для локального запуска
DATABASE_URL=postgresql://billboard_user:billboard_pass@postgres:5432/billboard_db

# Redis Configuration
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# JWT Authentication
SECRET_KEY=your-secret-key-here-change-in-production-use-strong-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200  # 30 дней (30 * 24 * 60)

# File Storage
UPLOAD_DIR=./uploads/videos
MAX_VIDEO_SIZE_MB=500

# Prime Time Configuration (для расчета заработка)
PRIME_TIME_START=18  # Начало прайм-тайма (18:00)
PRIME_TIME_END=22    # Конец прайм-тайма (22:00)
PRIME_TIME_MULTIPLIER=1.5  # Коэффициент в прайм-тайм (x1.5)

# Server Configuration
HOST=0.0.0.0
PORT=8000
# Режим отладки (true/false)
# При DEBUG=true включается автоперезагрузка при изменении файлов (--reload)
# Для production установите DEBUG=false для лучшей производительности
DEBUG=true

# Путь к папке uploads для docker volume (по умолчанию ./uploads)
# Можно указать абсолютный путь, например: /var/www/billboard.leetcode.uz/uploads
UPLOADS_VOLUME_PATH=./uploads

# ====================================
# Production Settings (раскомментируйте для продакшена)
# ====================================

# Используйте сильный случайный ключ для JWT:
# SECRET_KEY=$(openssl rand -hex 32)

# Для продакшена смените пароль БД:
# POSTGRES_PASSWORD=your_strong_password_here

# Для продакшена используйте внешние сервисы:
# DATABASE_URL=postgresql://user:pass@external-db-host:5432/dbname
# REDIS_URL=redis://external-redis-host:6379/0
